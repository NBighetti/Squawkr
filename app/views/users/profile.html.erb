<h1><%= @user.username %>.. is logged in</h1>

<ul>
  <% @user.squawks.each do |squawk| %>
<li>
  <%= form_tag("/squawks/#{ squawk.id }", method: :delete) do %>
  <%= submit_tag "Delete"%>
  <% end %>
  <%= squawk.message %>
</li>

<%end%>

</ul>

<%= form_tag('/log_out', method: :delete) do %>
  <% submit_tag "Log-Out" %>
<% end %>

<%= form_for @squawk do |f|%>
  <%= f.label :message %>
  <%= f.text_field :message %>
  <%= f.submit %>
<% end %>
