<body id="profilePage">

<div class="row">
  <nav class="twelve columns profileNav">
    <h3 class="profileName">
      <%= @user.username %>
    </h3>
    <%= form_tag('/log_out', method: :delete) do %>
      <% submit_tag "Sign-Out", :class => "profileLogOut" %>
    <% end %>
  </nav>
</div>

<div class="row">
  <div class="twelve columns">
    <%= form_for @squawk do |f|%>
      <%= f.label :message %>
      <%= f.text_field :message %>
      <br>
      <%= f.submit %>
    <% end %>
    <ul>
      <% @user.squawks.each do |squawk| %>
        <li>
          <%= squawk.message %>
        </li>
        <%= form_tag("/squawks/#{ squawk.id }", method: :delete) do %>
        <%= submit_tag "Delete"%>
        <% end %>
      <%end%>
    </ul>
  </div>
</div>
<footer>
  <div class="four columns">

  </div>
</footer>
</body>
